<!DOCTYPE html>
<html>
<head>

  <title>RailsYelpMvp</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="navbar-yelp">
    <!-- Logo -->
    <a href="/" class="navbar-yelp-brand">
      <img src="images/logo.png" alt="logo">
    </a>

    <!-- Right Navigation -->
    <div class="navbar-yelp-right hidden-xs hidden-sm">

      <a href="" class="navbar-yelp-item navbar-yelp-link">Restaurants</a>
      <a href="" class="navbar-yelp-item navbar-yelp-link">Reviews</a>
      <a href="" class="navbar-yelp-item navbar-yelp-link">Forums</a>

      <!-- Profile picture with dropdown list -->
      <div class="navbar-yelp-item">
        <div class="dropdown">
          <img src="https://kitt.leyelp.com/placeholder/users/ssaunier" class="avatar dropdown-toggle" id="navbar-yelp-menu" data-toggle="dropdown">
          <ul class="dropdown-menu dropdown-menu-right navbar-yelp-dropdown-menu">
            <li><a href="#">Profile</a></li>
            <li><a href="#">Dashboard</a></li>
            <li><a href="#">Log Out</a></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Dropdown appearing on mobile only -->
    <div class="navbar-yelp-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-yelp-dropdown-menu">
          <li><a href="#">Restaurants</a></li>
          <li><a href="#">Reviews</a></li>
          <li><a href="#">Forums</a></li>
        </ul>
      </div>
    </div>
  </div>
  <%= yield %>
</body>
</html>
