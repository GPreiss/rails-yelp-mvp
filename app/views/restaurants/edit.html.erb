<h2>Edit the fields of <%= @restaurant.name %></h2>
<%= simple_form_for @restaurant do |f| %>
<%= f.input :name, placeholder: "Enter the restaurant name" %>
<%= f.input :address, placeholder: "Enter the address" %>
<%= f.input :phone_number, placeholder: "Enter the phone number" %>
<%= f.input :category, placeholder: "Enter the type of cuisine(i.e. italian, french, english, etc.)", :collection => %w[chinese italian japanese french belgian] %>
<%= f.submit "Submit your edit", class: "btn btn-info" %>
<% end %>

